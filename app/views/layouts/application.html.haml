%html{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{content: "True", name: "HandheldFriendly"}/
    %meta{content: "320", name: "MobileOptimized"}/
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0", name: "viewport"}/
    %meta{name: "apple-mobile-web-app-capable", content: "yes"}/
    %meta{name: "apple-mobile-web-app-status-bar-style", content: "black-translucent"}/
    %meta{content: "on", "http-equiv" => "cleartype"}/
    %title Give to Spark of Love Thru Yeti Media and Starbucks
    / Included CSS Files
    = stylesheet_link_tag "application"
    = javascript_include_tag '//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry'
    = javascript_include_tag '//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js'
    %script{:type => "text/javascript", :src => "//use.typekit.net/tzl1sgs.js"}
    %script{:type => "text/javascript"}
      try{Typekit.load();}catch(e){}
    / Included JS Files
    :javascript
      var donut_chart_data = #{@donut_chart_data.to_json}
    = javascript_include_tag "application"
    = yield :scripts
    = csrf_meta_tags
  %body
    :plain
      <div id="fb-root"></div>
      <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=468578209843897";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>
    .l-container.row
      = yield
    %script{:src => "//assets.pinterest.com/js/pinit.js", :type => "text/javascript"}
  
